#!/usr/bin/env bash

# Create PID file with script's PID
echo $$ > /var/run/myscript.pid

# Function that handles signals
trap_handler()
{
    case "$1" in
        SIGTERM)
            echo "I hate the kill command!"
            rm -f /var/run/myscript.pid
            exit 0
            ;;
        SIGINT)
            echo "Y U no love me?!"
            ;;
        SIGQUIT)
            echo "Goodbye, cruel world!"
            rm -f /var/run/myscript.pid
            exit 0
            ;;
    esac
}

# Set up signal traps
trap trap_handler SIGTERM SIGINT SIGQUIT

# Main loop
while true
do
    echo "To infinity and beyond!"
    sleep 2
done
